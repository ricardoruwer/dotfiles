#!/usr/bin/env ruby
require 'open-uri'
require 'json'

API_URL = 'http://developers.agenciaideias.com.br/correios/rastreamento/json'.freeze
code = ARGV.first

unless code
  puts 'Usage: correios <tracking code>'
  exit 1
end

data = JSON.parse(open("#{API_URL}/#{code}").read)

data.each do |entry|
  puts "#{entry['local']} â€” #{entry['data']}"
  puts entry['acao']
  puts entry['detalhes'] unless entry['detalhes'] == '-'
  puts
end
