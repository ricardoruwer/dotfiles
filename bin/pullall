#!/bin/bash
# Usage: pullall [DIRECTORY]
#
# Performs 'git pull' on several repositories under the given DIRECTORY.
set -e

target=${1:-.}

if [[ ! -d $target ]]; then
  echo "'$target' is not a directory."
  exit 0
fi

print_in_yellow() {
  printf "\e[0;33m$1\e[0m"
}

untracked_files() {
  [[ -n $(git status -s) ]]
}

pull_at_master() {
  stashed_files=false

  if untracked_files; then
    git stash save --include-untracked -q
    stashed_files=true
  fi

  git switch master -q
  git pull -q
  git switch - -q

  if $stashed_files; then
    git stash pop -q
  fi
}

for repo in $(ls -d -1 $target/*/.git 2>/dev/null); do
  dir=${repo/\/.git//}
  name=${dir/$root\//}
  print_in_yellow "pulling ${name%?}...\n"

  pushd $dir > /dev/null
  pull_at_master
  popd > /dev/null
done
