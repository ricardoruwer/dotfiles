[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  status = auto
  ui = auto

[alias]
  ap = add --patch
  b = branch
  branches = branch -a
  ci = commit
  cie = commit --allow-empty
  co = checkout
  cp = cherry-pick
  d = diff
  done = !git switch main && git pull && git branch -D @{-1}
  ds = diff --staged
  fix = commit --amend --no-edit
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lf = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short --numstat
  lol = !"git add -A; git commit -am \"$(echo $(curl -s http://whatthecommit.com/index.txt)\"\")\""
  ma = merge --abort
  mc = merge --continue
  pf = push --force-with-lease
  pom = push origin main
  prune = fetch --prune
  r = reset
  rank = shortlog -sn --no-merges
  ra = rebase --abort
  rc = rebase --continue
  rrm = rebase main
  remotes = remote -v
  rim = rebase -i main
  rr = restore
  s = status -sb
  sp = stash pop
  stash-all = stash save --include-untracked
  sw = switch
  swm = switch main
  sw-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git switch pr/$1' -
  tags = tag -l
  td = commit -m 'Trigger deploy' --allow-empty
  undo = reset --soft HEAD^
  upd = !git switch main -q && git pull -q && git switch - -q && git rebase main
  updm = !git switch main -q && git pull -q && git switch - -q && git merge main
  wd = diff --color-words
  wip = !git add . && git commit -am 'WIP :construction:'

[core]
  editor = code -w
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -R
  whitespace = warn

[push]
  default = current
  followTags = true

[user]
  email = ricardoruwer@gmail.com
  name = Ricardo Ruwer

[merge]
  conflictstyle = diff3
  ff = false

[pull]
  rebase = true

[commit]
  template = ~/.gitmessage

[status]
  showUntrackedFiles = all

[diff]
  tool = icdiff

[difftool]
  prompt = false

[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[url "git@github.com:"]
  insteadOf = https://github.com/

[init]
	defaultBranch = main
